#!/bin/bash
#
# Git pre-commit hook
# Runs typecheck and tests before allowing commit
#

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

echo "Running pre-commit checks..."
echo ""

# Check if there are TypeScript files staged
TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$')

if [ -z "$TS_FILES" ]; then
    echo -e "${YELLOW}No TypeScript files staged, skipping checks${NC}"
    exit 0
fi

# Run typecheck
echo -e "${YELLOW}Running TypeScript check...${NC}"
npm run typecheck
TYPECHECK_EXIT=$?

if [ $TYPECHECK_EXIT -ne 0 ]; then
    echo ""
    echo -e "${RED}TypeScript check failed${NC}"
    echo "Fix the type errors before committing."
    echo "See CONTRIBUTING.md for development workflow."
    exit 1
fi
echo -e "${GREEN}TypeScript check passed${NC}"
echo ""

# Run tests
echo -e "${YELLOW}Running tests...${NC}"
npm test
TEST_EXIT=$?

if [ $TEST_EXIT -ne 0 ]; then
    echo ""
    echo -e "${RED}Tests failed${NC}"
    echo "Fix the failing tests before committing."
    echo "See CONTRIBUTING.md for testing guidelines."
    exit 1
fi
echo -e "${GREEN}Tests passed${NC}"
echo ""

echo -e "${GREEN}All pre-commit checks passed!${NC}"
exit 0
